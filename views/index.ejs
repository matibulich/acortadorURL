<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <title>Acortador de URL</title>
</head>
<body>
  <div class="container">
    <h1 class="text-center">Acortador de URL</h1>
    <form action="/acortadorurl" class="text-center row g-1 justify-content-center" method="POST">
      <div class="col-12">
        <label for="url" class="form-label">Ingrese la URL</label>
      </div>
      <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <input class="form-control" type="text" name="url" id="url">
      </div>
      <div class="col-12 mt-2">
        <button class="btn btn-success" type="submit">Acortar</button>
      </div>
    </form>

    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">URL Completa</th>
          <th scope="col">URL Corta</th>         
        </tr>
      </thead>
      <tbody>
        <% shortUrl.forEach((e, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><a href="<%= e.full %>" target="_blank"><%= e.full %></a></td>
            <td><a href="/<%= e.short %>" target="_blank">https://<%= e.short %></a></td>            
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
